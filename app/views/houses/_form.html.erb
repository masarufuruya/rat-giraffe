
<%= form_for(house) do |f| %>
  <% if house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
      <% house.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, value: "物件名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :rent, value: "賃料" %>
    <%= f.text_field :rent %>円
  </div>

  <div class="field">
    <%= f.label :address, value: "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age, value: "築年数" %>
    <%= f.text_field :age %>年
  </div>

  <div class="field">
    <%= f.label :memo, value: "備考" %>
    <%= f.text_area :memo %>
  </div>

  <hr>

  <%= f.fields_for :nearest_stations do |nearest_station| %>
    <h3>最寄り駅<%= nearest_station.index + 1 %></h3>
    <div class="field">
      <%= nearest_station.label :line_name, "路線名" %>
      <%= nearest_station.text_field :line_name %>
    </div>
    <div class="field">
      <%= nearest_station.label :station_name, "駅名" %>
      <%= nearest_station.text_field :station_name %><br />
    </div>
    <div class="field">
      <%= nearest_station.label :required_walking_minutes, "徒歩分数" %>
      <%= nearest_station.text_field :required_walking_minutes %><br />
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
