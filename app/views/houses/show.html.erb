<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @house.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @house.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @house.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @house.memo %>
</p>

<hr>

<% @house.nearest_stations.each_with_index do |nearest_station, number| %>
  <h2>最寄り駅<%= number + 1 %></h2>

  <p>
    <strong>路線名:</strong>
    <%= nearest_station.line_name %>
  </p>

  <p>
    <strong>駅名:</strong>
    <%= nearest_station.station_name %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= nearest_station.required_walking_minutes %>
  </p>
<% end %>

<%= link_to '編集', edit_house_path(@house) %> |
<%= link_to '戻る', houses_path %>
